#include <iostream>

using namespace std;

struct Node{
    
    int val;
    Node * next;
    
    
};

void printList(Node * head){
    
    if(head==NULL)
        return;
    cout<<head->val;
    cout<<" ";
    head=head->next;
    printList(head);
}

Node * InsertAtFirst(Node * head, int newData){
    Node *newNode=new Node();
    
    newNode->val=newData;
    newNode->next=head;
    head=newNode;
    return head;
}

int main()
{
    // cout<<"Hello World";
    
    Node * head=new Node();
    
    Node * first=new Node();
    
    Node * second=new Node();
    
    
    head->val=1;
    head->next=first;
    
    
    first->val=2;
    first->next=second;
    
    second->val=3;
    second->next=NULL;
    
    printList(head);
    cout<<endl;
    int x;
    
    cout<<"Enter the new Node which you want to insert : ";
    cin>>x;
    
    
    
    head = InsertAtFirst(head,x);
    
    cout<<endl;
    
    printList(head);

    return 0;
}





///Using head_ref -- double pointer



/******************************************************************************

                              Online C++ Compiler.
               Code, Compile, Run and Debug C++ program online.
Write your code in this editor and press "Run" button to compile and execute it.

*******************************************************************************/

#include <iostream>

using namespace std;

struct Node{
    
    int val;
    Node * next;
    
    
};

void printList(Node * head){
    
    if(head==NULL)
        return;
    cout<<head->val;
    cout<<" ";
    head=head->next;
    printList(head);
}

void InsertAtFirst(Node **head_ref, int newData){
    Node *newNode=new Node();
    
    newNode->val=newData;
    newNode->next=*head_ref;
    *head_ref=newNode;
    // return head;
}

int main()
{
    // cout<<"Hello World";
    
    Node * head=new Node();
    
    Node * first=new Node();
    
    Node * second=new Node();
    
    
    head->val=1;
    head->next=first;
    
    
    first->val=2;
    first->next=second;
    
    second->val=3;
    second->next=NULL;
    
    printList(head);
    cout<<endl;
    int x;
    
    cout<<"Enter the new Node which you want to insert : ";
    cin>>x;
    
    
    
    InsertAtFirst(&head,x);
    
    cout<<endl;
    
    printList(head);

    return 0;
}
