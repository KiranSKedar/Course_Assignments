//n to 1
#include <iostream>

using namespace std;

void callRec(int i,int n){
    
    if(i>n)
        return;
        
    cout<<i;
    cout<< " ";
    callRec(i+1,n);
   
}

int main()
{
    // cout<<"Hello World";
    
    int nu;
    
    cout<<"Enter the number:"<<endl;
    cin>>nu;
    
    
    callRec(1,nu);

    return 0;
}
